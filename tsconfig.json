{
    "compilerOptions": {
        "target": "ES6",
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "allowJs": true,
        "checkJs": false,
        "outDir": "./build",
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "include": [
        "*/**/*",
    ],
    "exclude": [
        "public",
        ".cache",
        "node_modules"
    ]
}
